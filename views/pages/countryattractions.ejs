<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<style>
  .hero{
    background-image: url('/images/hero.png');
    background-size: cover;
  }
  .container{
    display: flex;
    flex-wrap: wrap;
    width:80%;
    column-gap:20px;
  }
  img{
    width: 150px;
    height: 150px;
    border-radius: 5px;
  }
  .container-item{
    width: 200px;
    height: 300px;
  }
</style>
<body class="container-fluid">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron hero">
  </div>


<div class = "container column-gap-3">
  <% places.forEach(function(place) { %>
    <div class = "container-item mb-5">
      <a href="/place/place-details/<%= place.place.id %>">
        <div class = "h-25">
          <strong><%= place.place.displayName.text %></strong>
        </div>
        <div class = "h-25"> <%= place.place.formattedAddress %></div>
        <img src = <%= place.photos.photoUri %>>
      </a>
    </div>
  <% }); 
  %>
</div>


</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>